-hako-is-unit($value, $unit)
	return unit($value) is $unit if $value is a "unit"
	return false

-hako-em($value, $base = 16)
	return unit($value / $base, "em") if -hako-is-unit($value, "px")
	return $value

-hako-rem($value, $base = 16)
	return unit($value / $base, "rem") if -hako-is-unit($value, "px")
	return $value

-hako-unitless-lineheight($value, $pxValue)
	return round($value / $pxValue, 2) if $value is a "unit" and $pxValue is a "unit"
	return $value

-hako-negative($value)
	return $value * -1 if $value is a "unit"
	return $value

-hako-percentage($value)
	return $value if -hako-is-unit($value, "%")

	if $value is a "unit"
		$percentage = $value * 100%

		return $percentage if -hako-is-unit($percentage, "%")

	return $value
