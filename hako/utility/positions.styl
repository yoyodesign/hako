hako-pos($type, $args)
	$i = 0

	position unquote($type)

	for $j in (1..4)
		if length($args) > $i
			{$args[$i]}: $args[$i + 1] is a "unit" ? $args[$i += 1] : 0
		$i += 1

/*
 * Position utility.
 *
 * Synopsis:
 *
 *   fixed: <pos> [n] <pos> [n]
 *
 * Examples:
 *
 *     fixed: top left
 *     fixed: top 5px left
 *     fixed: top left 5px
 *     fixed: top 5px left 5px
 *
 */
fixed()
	hako-pos("fixed", arguments)

