@require "placeholder"

if "date" in $hako["forms"]
	[type="date"]
	[type="datetime"]
	[type="datetime-local"]
	[type="month"]
	[type="week"]
	[type="time"]
		display block
		width 100%
		appearance none

		hako-input-field($hako["forms"]["date"])

		&::-webkit-calendar-picker-indicator
			display none
